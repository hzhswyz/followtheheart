/* pages/order/order.wxss */
page{
  background-image: linear-gradient(to top, #ebbba7 0%, #cfc7f8 100%);
}
.container{

}
.scrollview{

}
.orderitem{
display: flex;
flex-direction: column;
padding: 10px;
background-color: rgba(255, 255, 255, 0.6);
margin: 6px 6px 0px 6px;
border-radius: 5px;
color: #363636;
}
.item1{
display: block;
}
.item2{
margin-top:5px;
display: block;
}
.storename{
float: left;
display: flex;
flex-direction: row;
justify-content:center;
align-items: center;
}
.storeimg{
  width: 25px;
  height: 25px;
  margin-right: 10px;
}
.money{
float: right;
display: flex;
flex-direction: row;
justify-content:center;
align-items: center;
color: #1296db;
}
.paydate{
float: right;
font-size: 15px;
color: rgb(122, 122, 122);
}
.foot{
  width: 100%;
  height: 70px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
}
.perview{
width: 35%;
height: 60%;
border-radius: 20px;
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
background-color: rgba(255, 255, 255, 0.7);
margin-right: 10%;
color: #363636;
}
.next{
width: 35%;
height: 60%;
border-radius: 20px;
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
background-color: rgba(255, 255, 255, 0.7);
color: #363636;
}