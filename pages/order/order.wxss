/* pages/order/order.wxss */
page{
  background-image: linear-gradient(to top, #ebbba7 0%, #cfc7f8 100%);
}
.orderitem{
display: flex;
flex-direction: column;
padding: 10px;
background-color: rgba(255, 255, 255, 0.6);
margin: 0px 6px 6px 6px;
border-radius: 5px;
color: #363636;
}
.item1{
display: flex;
flex-direction: row;
}
.item2{
margin-top:5px;
display: flex;
flex-direction: column;
margin-left: 45px;
}
.numandname{
display: flex;
width: 90%;
flex-direction: row;
font-size: 15px;
color: #7a7a7a;
}
.foodname{
width: 70%;
}
.foodnum{
width: 30%;
}
.item3{
border-top:solid #b6b6b6;
border-top-width:1px;
margin-top:10px;
padding-top: 8px;
display: flex;
flex-direction: row;
justify-content:flex-start;
align-items: center;
margin-left: 45px;
}
.storename{
width: 50%;
display: flex;
flex-direction: row;
justify-content:flex-start;
align-items: center;
}
.storeimg{
width: 35px;
height: 35px;
margin-right: 10px;
border-radius: 3px;
}
.money{
width: 50%;
display: flex;
flex-direction: row;
justify-content:flex-end;
align-items: center;
color: #1296db;
}
.commoditynum{
width: 50%;
display: flex;
flex-direction: row;
align-items: center;
font-size: 15px;
color: #363636;
justify-content:flex-start;
}
.paydate{
width: 50%;
font-size: 15px;
color: #363636;
display: flex;
flex-direction: row;
align-items: center;
justify-content:flex-end;
}
.foot{
width: 100%;
height: 70px;
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
background-color: rgba(255, 255, 255, 0.2);
}
.perview{
width: 35%;
height: 60%;
border-radius: 20px;
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
background-color: rgba(255, 255, 255, 0.7);
margin-right: 10%;
color: #363636;
}
.next{
width: 35%;
height: 60%;
border-radius: 20px;
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
background-color: rgba(255, 255, 255, 0.7);
color: #363636;
}