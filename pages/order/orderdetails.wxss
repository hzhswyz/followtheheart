/* pages/order/orderdetails.wxss */
page{
background: #C6FFDD;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #f7797d, #FBD786, #C6FFDD);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #f7797d, #FBD786, #C6FFDD); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}
.container{
  display: flex;
  flex-direction: column;
  color: rgb(78, 78, 78);
}
.title{
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 25px;
  padding: 20px 0px 20px 0px;
  color: hsl(0, 0%, 31%);
  background-color: hsla(199, 87%, 83%, 0.502);
}
.storeimg{
  width: 60px;
  height: 60px;
  margin-right: 10px;
  border-radius: 60px;
}
.money{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 50px;
  color: red;
  padding: 20px 0px 20px 0px;
  background-color: hsla(222, 25%, 92%, 0.5);
}

.orderidtext{
font-size: 12px;
color: rgb(122, 122, 122);
word-break:break-all;
}
.transactiondatetext{

}
.paymenttimetext{

}
.addresstext{
  font-size: 14px;
}
.minwidth{
  float: left;
}
.detailstable{
  display: table;
  width: 100%;
  overflow: hidden;
  background-color: hsla(222, 25%, 92%, 0.5);
  padding-bottom: 20px;
}
.tabletr{
  height: 50px;
  display: table-row;
}
.tabletd1{
  display: table-cell;
  width: 30%;
  vertical-align: middle;
  padding-left: 10px;
}
.tabletd2{
  text-align:right;
  vertical-align: middle;
  width: 70%;
  word-wrap : break-word;
  display: table-cell;
  padding-right: 10px;
}

.buttonview{
  margin-top: 50px;
  width: 80%;
  height: 50px;
  background-image: radial-gradient(circle 248px at center, #16d9e3 0%, #30c7ec 47%, #46aef7 100%);
  border-radius: 20px;
  font-size: 25px;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center; 
}