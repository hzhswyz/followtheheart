/* pages/order/orderdetails.wxss */
page{
background-image: linear-gradient(to top, #9795f0 0%, #fbc8d4 100%);
overflow-x: hidden;
}
.container{
  display: flex;
  flex-direction: column;
  color: rgb(78, 78, 78);
}
.title{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 25px;
  padding: 10px 0px 0px 0px;
  color: #00aeff;
}
.storeimg{
  width: 60px;
  height: 60px;
  margin-right: 10px;
  border-radius: 60px;
}
.money{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 50px;
  color: red;
  padding: 20px 0px 20px 0px;
}

.orderidtext{
font-size: 12px;
color: rgb(122, 122, 122);
word-break:break-all;
}
.transactiondatetext{
  color: #00aeff;
}
.paymenttimetext{
  color: #00aeff;
}
.addresstext{
  font-size: 14px;
}
.minwidth{
  float: left;
}
.detailstable{
  padding: 5%;
  display: table;
  min-width: 95%;
  overflow: hidden;
  background-color: hsla(222, 25%, 92%, 0.5);
}
.tabletr{
  height: 50px;
  display: table-row;
}
.tabletd1{
  display: table-cell;
  width: 30%;
  vertical-align: middle;
}
.tabletd2{
  text-align:right;
  vertical-align: middle;
  width: 70%;
  word-wrap : break-word;
  display: table-cell;
}

.buttonview{
  margin-top: 50px;
  width: 80%;
  height: 50px;
  background-image: radial-gradient(circle 248px at center, #16d9e3 0%, #30c7ec 47%, #46aef7 100%);
  border-radius: 20px;
  font-size: 25px;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center; 
}