/* pages/order/comment/comment.wxss */
page{
    background: linear-gradient(to right, #74ebd5, #acb6e5);
}
.container{
  width: 100%;
  color: rgb(75, 75, 75);
}
.form{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.store{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  padding: 10px 0px 10px 0px;
  background-color: rgba(255, 255, 255, 0.4);
  margin-bottom: 20px;
}
.storeimg{
  display: flex;
  flex-direction: row;
}
.img{
  display: flex;
  flex-direction: row;
  width: 50px;
  height: 50px;
  border-radius: 50px;
}
.storename{
  display: flex;
  flex-direction: row;
  font-weight: bold;
  font-size: 20px;
}
.storescore{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 16px;
}
.isanonymous{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.anonymouslabel{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.scoreview{
  background-color: #caebf3;
  padding: 3px 10px 3px 10px;
  border-radius: 15px;
}
.commentitem{
  padding: 10px 0px 10px 0px;
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  background-color: rgba(255, 255, 255, 0.4);
}
.fooditem{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 16px;
  border-radius: 20px;
  overflow: hidden;
}
.foodimgview{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width:50%;
}
.foodimg{
  width:90%;
  border-radius: 10px;
}
.foodinfo{
  display: flex;
  flex-direction: column;
  width:50%;
}
.foodinfotext{
  
}
.commentview{
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.textarea{
  padding: 10px;
  height: 40px;
  font-size: 16px;
  width:90%;
  border-radius: 10px;
  background-color:  rgba(255, 255, 255, 0.45);
}
.submit{
  margin-bottom: 20px;
}