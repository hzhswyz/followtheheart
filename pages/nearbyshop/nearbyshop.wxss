/* pages/nearbyshop/nearbyshop.wxss */
.filter{
  margin-left: 20px;
  margin-right: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
}
.filteritem{
font-size: 16px;
color: rgb(102, 102, 102);
}
.filteritemclick{
font-size: 16px;
color: rgb(43, 43, 43);
font-weight: bold;
}
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.item{
  width: 100%;
  margin-top: 15px;
  height: 160rpx;
  align-items:flex-start;
  display: flex;
  flex-direction: row;
  box-shadow: 0 2px 4px 0 rgba(112, 112, 112, 0.1);
  /*background-color: saddlebrown;*/
}
.imgarea{
  height: 100%;
  width: 25%;
  display: flex;
  flex-direction: column;
  /*background-color: yellowgreen;*/
  justify-content:center;
  align-items: center;
}
.storeimg{
  width: 80%;
  height: 60px;
  border-radius: 10px;
}
.information{
  justify-content:space-evenly;
  height: 100%;
  width: 75%;
  display: flex;
  flex-direction: column;
  /*background-color: green*/
}
.storename{
  display: flex;
  width: 100%;
  flex-direction: row;
  /*background-color: yellow;*/
}
.nametext{
  color: rgb(51, 51, 51);
}
.starandsaleanddistance{
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 12px;
  flex-wrap:nowrap;
  /*background-color: blue;*/
  color: rgb(107, 107, 107);
}
.star{
  /*background-color: rgb(22, 189, 58);*/
  width: 40%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.starsimg{
  width:12px;
  height:12px;
}
.storetypeimg{
  width:15px;
  height:15px;
  margin-right: 5px;
}
.sale{
  /*background-color: seashell;*/
  width: 30%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.distance{
  /*background-color: aqua;*/
  width:30%;
  display: flex;
  margin-right: 20px;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.storetypeandpre{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  /*background-color: gold;*/
  font-size: 12px;
  color: rgb(107, 107, 107)
}
.storetype{
  width: 40%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.per{
  width: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
}