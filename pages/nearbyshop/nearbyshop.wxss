/* pages/nearbyshop/nearbyshop.wxss */
.filter{
  position: fixed;
  width: 90%;
  padding-left: 5%;
  padding-right: 5%;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
  background-color: white;
}
.filteritem{
font-size: 16px;
color: rgb(102, 102, 102);
}
.filteritemclick{
font-size: 16px;
color: rgb(43, 43, 43);
font-weight: bold;
}
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.item{
  width: 100%;
  margin-top: 15px;
  height: 160rpx;
  align-items:flex-start;
  display: flex;
  flex-direction: row;
  box-shadow: 0 2px 4px 0 rgba(112, 112, 112, 0.1);
  /*background-color: saddlebrown;*/
}
.imgarea{
  height: 100%;
  width: 25%;
  display: flex;
  flex-direction: column;
  /*background-color: yellowgreen;*/
  justify-content:center;
  align-items: center;
}
.storeimg{
  width: 80%;
  height: 60px;
  border-radius: 10px;
}
.information{
  justify-content:space-evenly;
  height: 100%;
  width: 75%;
  display: flex;
  flex-direction: column;
  /*background-color: green*/
}
.storename{
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  /*background-color: yellow;*/
}
.reserveview{
  flex-direction: row;
  align-items: center;
  display: flex;
  margin-right: 20px;
}
.reserveimg{
  width:15px;
  height:15px;
  margin: 0px 5px 0px 5px;
}
.nametext{
  color: rgb(51, 51, 51);
}
.reservetext{
  font-size: 16px;
  color: #3cccf0;
}
.closedtext{
  font-size: 16px;
  color: rgb(102, 102, 102);
}
.starandsaleanddistance{
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 12px;
  flex-wrap:nowrap;
  /*background-color: blue;*/
  color: rgb(107, 107, 107);
}
.star{
  /*background-color: rgb(22, 189, 58);*/
  width: 40%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.starsimg{
  width:12px;
  height:12px;
}
.storetypeimg{
  width:15px;
  height:15px;
  margin-right: 5px;
}
.sale{
  /*background-color: seashell;*/
  width: 30%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.distance{
  /*background-color: aqua;*/
  width:30%;
  display: flex;
  margin-right: 20px;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.storetypeandpre{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  /*background-color: gold;*/
  font-size: 12px;
  color: rgb(107, 107, 107)
}
.storetype{
  width: 40%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.per{
  width: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.reserveviewout{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(41, 41, 41, 0.8)
}
.reservecontent{
  border-radius: 10px;
  position: fixed;
  top:20%;
  left: 10%;
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: white;
}
.reservetiptext{
  align-self: center;
  margin: 20px 20px 0px 20px;
}
.reserveform{
  margin: 20px;
  display: flex;
  flex-direction: column;
}
.reservepicker{
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: rgb(11, 151, 194);
}
.reservepeoplenum{
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.peoplenumtext{
}
.peoplenuminput{
  max-width: 50%;
  min-width: 50%;
  padding-left: 10px;
  border-bottom:1px solid #3a3a3a;
}
.reserveremarks{
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.remarkstextarea{
  background-color: rgb(240, 230, 230);
  padding: 10px;
  border-radius: 10px;
  width: auto;
}
.reservebuttonarea{
  margin: 20px 0px 0px 0px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}