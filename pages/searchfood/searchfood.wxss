/* pages/searchfood/searchfood.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction:column;
  flex-wrap:wrap;
  align-content:stretch;
  justify-content: flex-start;
  align-items:stretch;
  background-color: rgba(240, 240, 240, 0.7);
}
.item{
  display: flex;
  flex-direction:column;
  align-items: center;
  margin-bottom: 10px;
  background-color: white;
  padding-top: 10px;
}
.title{
  width: 95%;
  display: flex;
  flex-direction:row;
}
.openstore{
  background-color: rgb(238, 238, 238);
}
.storeimg{
  display: flex;
  flex-direction:row;
}
.img{
  width: 50px;
  height: 50px;
  border-radius: 50px;
}
.storeinfo{
  flex-grow:1;
  display: flex;
  flex-direction:column;
  align-content:stretch;

}
.nameanddistance{
  height: 50%;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;

}
.storename{
  margin-left: 20px;
  font-size: 16px;
  font-weight: bold;
  display: flex;
  flex-direction:row;
}
.distance{
  margin-right: 20px;
  display: flex;
  font-size: 14px;
  flex-direction:row;
}
.scoreandsalesandper{
  height: 50%;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;

}
.scoreview{
  margin-left: 20px;
  align-items: center;
  display: flex;
  flex-direction:row;
}
.starsimg{
  width:16px;
  height:16px;
  margin-bottom: 2px;
}
.score{
  margin-left: 10px;
  display: flex;
  flex-direction:row;
}
.sales{
  display: flex;
  flex-direction:row;
}
.per{
  display: flex;
  flex-direction:row;
  margin-right: 20px;
}
.context{
  width: 100%;
  display: flex;
  flex-direction:row-reverse;
  align-items: center;
  padding: 10px 0px 10px 0px;
}
.foodview{
  width: 95%;
  height: 260rpx;
  display: flex;
  flex-direction:row;
  align-items: center;
  overflow-x: auto;
}
.fooditem{
  display: flex;
  flex-direction:column;
  font-size: 14px;
  margin-right: 10px;
}
.foodimgview{
  display: flex;
  flex-direction:row;
}
.foodimg{
  width: 250rpx;
  height: 150rpx;
  border-radius: 5px;
}
.foodinfo{
  height: 100rpx; 
  display: flex;
  flex-direction:column;
}
.foodname{
  height: 50%;
  display: flex;
  flex-direction:row;
  align-items: center;
}
.foodpriceview{
  display: flex;
  flex-direction:row;
  align-items: center;
}
.rmb{
  width: 14px;
  height: 14px;
}
.foodprice{
  height: 50%;
  display: flex;
  flex-direction:row;
  align-content: center;
  color: #ff0000;
}