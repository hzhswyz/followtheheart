/* pages/customcomponents/rotationpicture.wxss */

.swiperoutview{
  width: 100%;
  padding-top: 5px;
  padding-bottom: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiperview{
  width: 97%;
  overflow: hidden;
}

.swiper-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.swiper-item-view{
  width: 100%;
  height: 100%; 
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  transition:all 0.3s ease-in 0s;
}

.swiper-item-currentview{
  width: 90%;
  height: 90%; 
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  transition:all 0.3s ease-in 0s;
} 

.swiper-img{
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 10px;
}