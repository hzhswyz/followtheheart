/* pages/manage/manage.wxss */
.container{
  flex-direction: column;
  align-items: center;
  display: flex;
}
.recommendationview{
  flex-direction: column;
  align-items: center;
  display: flex;
  position: relative;
  border-radius: 10px;
  margin-bottom: 20px;
  box-shadow:0px 5px 10px 0px rgb(173, 173, 173);
  overflow: hidden;
}

.recommendationimgview{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction:column;
}

.foodimg{
  width:  100%;
  height: 100%;
  border-radius: 10px;
  filter: blur(6px);
}

.showdata{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
  justify-content: center;
  flex-direction:row;
  display: flex;
}

.showdatacontainer {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  -webkit-text-size-adjust:none;
  -webkit-user-select: none;
  font-size: 35rpx;
  color: rgb(255, 255, 255);
  font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}

.showdatatitle {
  height: 10%;
	text-align: center;
	position: relative;
	margin-top: 2%;
	margin-bottom: 2%;
}

.showdataback-btn {
	position: absolute;
	left: 20rpx;
	top: 0;
}

.showdatacanvas {
  height:86%;
  width:100%;
}