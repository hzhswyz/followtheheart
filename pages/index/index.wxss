/**index.wxss**/

@import "/wxSearch/wxSearch.wxss";
.userinfo {
  display: none;
  flex-direction: column;
  align-items: center;
  align-self: left;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.swiperoutview{
  width: 100%;
  padding-top: 5px;
  padding-bottom: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiperview{
  width: 97%;
  overflow: hidden;
}

.swiper-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.swiper-item-view{
  width: 100%;
  height: 100%; 
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  transition:all 0.3s ease-in 0s;
}

.swiper-item-currentview{
  width: 90%;
  height: 90%; 
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  transition:all 0.3s ease-in 0s;
} 

.swiper-img{
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 10px;
}

.secondtitle{
width: 100%;
text-align: center;
padding-bottom: 15px;
font-size: 25px;
color: rgb(93, 95, 92);
display: flex;
align-items: center;
justify-content: center;
}

.secondtitleimg{
  width: 30px;
  height: 30px;
  margin-right: 10px;
}

.recommendationview{
  width: 97%;
  flex-direction: column;
  align-items: center;
  display: flex;
  position: relative;
  border-radius: 10px;
  margin-bottom: 20px;
  box-shadow:0px 5px 10px 0px rgb(173, 173, 173);
  overflow: hidden;
}

.recommendationimgview{
  width: 100%;
  display: flex;
  flex-direction:column;
}

.foodimg{
  width:  100%;
  height: 100%;
  border-radius: 10px;
}

.recommendationtextview{
  width: 100%;
  padding-top: 14px;
  padding-right: 30px;
  padding-bottom: 22px;
  position: absolute;
  bottom: -15px;
  left: -15px;
  flex-direction:column;
  color: rgb(61, 61, 61);
  border-radius: 0px 0px 10px 10px;
  z-index: 1;
}

.recommendationtextview:after{
  position: absolute;
  content: '';
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 0px 0px 10px 10px;
  background-color: rgba(255, 255, 255, 0.85);
  z-index: -1;
  filter: blur(5px);
}


.recommendationtextview1{
  width:100%;
  display:flex;
  flex-direction: row;
  position: relative;
  margin-left: 15px;
}

.recommendationtextview2{
  width:50%;
  height:20px;
  font-size: 14px;
  display: flex;
  align-items: center;
  margin-left: 20px;
}

.recommendationicon{
  width: 14px;
  height: 14px;
  margin-right: 5px;
}


