/* pages/storeorder/storeorder.wxss */
.container{
  width: 100%;
}
.filterview{
  position: fixed;
  top:0px;
  left: 0px;
}
.orderitem{
  margin: auto;
  width: 96%;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  box-shadow:2px 2px 5px #adadad;
  padding: 10px 0px 10px 0px;
  border-radius: 10px;
  background: linear-gradient(to right, #667db6, rgb(0, 130, 200), #0082c8, #667db6);
  color: white;
}
.userimgandname{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
  justify-content: center;
}
.userimg{
  margin: 0px 20px 0px 0px;
  width: 50px;
  height: 50px;
  border-radius: 50px;
}
.username{
  display: flex;
  flex-direction: column;
  font-weight: bold;
}
.ordermoney{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 10px;
}
.moneytext{
  display: flex;
  flex-direction: row;
  font-size: 30px;
  color: white;
  justify-content: center;
}
.moneytext2{
  font-size: 30px;
  color: rgb(61, 255, 239);
}
.orderid{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 10px;
}
.idtext{
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color:  white;
  justify-content: center;
  font-family: menlo,tahoma;
  text-shadow: 1px 1px 2px #666;
}
.ordertime{
  display: flex;
  flex-direction: row-reverse;
  margin-right: 10px;
}
.timetext{
  display: flex;
  flex-direction: row;
  font-size: 15px;
  color: rgb(228, 228, 228);
  justify-content: center;
  font-family: menlo,tahoma;
  text-shadow: 1px 1px 2px #666;
}